<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_category_item_bg"
    android:padding="10dp"
    android:orientation="horizontal">

   <FrameLayout
       android:layout_width="80dp"
       android:layout_height="90dp">
       <ImageView
           android:id="@+id/iv_book_pic"
           android:layout_width="80dp"
           android:layout_height="90dp"
           android:layout_marginRight="5dp"
           android:scaleType="fitXY"
           android:src="@drawable/book_cover"
           />
        <TextView
            android:id="@+id/tv_cover_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="有血按时发生"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:paddingLeft="9dp"
            android:paddingRight="8dp"
            android:paddingTop="18dp"
            android:textSize="10sp"
            android:textColor="@android:color/white"
            />
       <TextView
           android:id="@+id/tv_cover_author"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="有血按时发生"
           android:singleLine="true"
           android:paddingBottom="6dp"
           android:paddingLeft="9dp"
           android:paddingRight="8dp"
           android:paddingTop="18dp"
           android:textSize="8sp"
           android:layout_gravity="bottom|end"
           android:layout_marginRight="8dp"
           android:textColor="@android:color/white"
           />
   </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_book_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="TextView"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_book_desc"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="3"
            android:textColor="@color/category_item_second_color"
            android:textSize="13sp"
            android:text="TextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextView" />

        <TextView
            android:id="@+id/tv_book_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textSize="10sp"
            android:textColor="#F8BBD0"
            android:text="TextView" />
    </LinearLayout>
</LinearLayout>